{
  "name": "sidequest",
  "version": "1.0.0-alpha.1",
  "description": "",
  "main": "./dist/sidequest.cjs",
  "module": "./dist/sidequest.js",
  "types": "./dist/sidequest.d.ts",
  "type": "module",
  "scripts": {
    "build": "rollup -c && yarn copy:ejs && yarn build:web && yarn copy:js && yarn copy:img",
    "build:web": "tailwindcss -i ./src/web/public/css/styles.css -o ./dist/web/public/css/styles.css",
    "copy:ejs": "shx rm -rf dist/web/views && shx cp -r src/web/views dist/web/views",
    "copy:js": "shx rm -rf dist/web/public/js && shx cp -r src/web/public/js dist/web/public/js",
    "copy:img": "shx rm -rf dist/web/public/img && shx cp -r src/web/public/img dist/web/public/img",
    "dev": "rollup -c -w",
    "test": "mocha --recursive './src/**/*.test.ts'",
    "test:coverage": "nyc yarn test",
    "prepublish": "yarn build",
    "format": "prettier --write \"**/*.{ts,js,tsx,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,tsx,jsx,json,md}\""
  },
  "author": "Lucas Merencia <lucas@merencia.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rollup/plugin-commonjs": "^28.0.5",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tailwindcss/cli": "^4.1.10",
    "@tsconfig/recommended": "^1.0.8",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.17",
    "@types/sinon": "^17.0.4",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "mocha": "^11.2.2",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "postcss": "^8.5.5",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rollup": "^4.43.0",
    "rollup-plugin-dts": "^6.2.1",
    "shx": "^0.4.0",
    "sinon": "^20.0.0",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "knex": "^3.1.0",
    "pg": "^8.15.6",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "report-dir": "coverage"
  },
  "packageManager": "yarn@4.9.2"
}
