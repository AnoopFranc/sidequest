{
  "name": "sidequest",
  "version": "1.0.0-alpha.1",
  "description": "",
  "main": "sidequest.cjs",
  "types": "./dist/sidequest.d.ts",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && npm run copy:ejs && npm run build:web && npm run copy:js && npm run copy:img",
    "build:web": "tailwindcss -i ./src/web/public/css/styles.css -o ./dist/web/public/css/styles.css",
    "copy:ejs": "rm -rf dist/web/views && cp -r src/web/views dist/web/views",
    "copy:js": "rm -rf dist/web/public/js && cp -r src/web/public/js dist/web/public/js",
    "copy:img": "rm -rf dist/web/public/img && cp -r src/web/public/img dist/web/public/img",
    "test": "mocha --recursive './src/**/*.test.ts'",
    "test:coverage": "nyc npm run test",
    "prepublish": "npm run build"
  },
  "bin": {
    "sidequest": "./bin/sidequest.js"
  },
  "author": "Lucas Merencia <lucas@merencia.com>",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@tsconfig/recommended": "^1.0.8",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.17",
    "@types/sinon": "^17.0.4",
    "autoprefixer": "^10.4.21",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "concurrently": "^9.1.2",
    "mocha": "^11.2.2",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "postcss": "^8.5.5",
    "sinon": "^20.0.0",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "knex": "^3.1.0",
    "pg": "^8.15.6",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "report-dir": "coverage"
  }
}
