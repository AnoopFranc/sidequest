{
  "name": "@sidequest/engine",
  "version": "1.0.0-alpha.1",
  "description": "",
  "main": "./dist/sidequest.cjs",
  "module": "./dist/sidequest.js",
  "types": "./dist/sidequest.d.ts",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "mocha --recursive './src/**/*.test.ts'",
    "test:coverage": "nyc yarn test",
    "prepublish": "yarn build"
  },
  "author": "Lucas Merencia <lucas@merencia.com>",
  "license": "ISC",
  "dependencies": {
    "@sidequest/core": "workspace:*"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).[tj]s?(x)"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ],
    "report-dir": "coverage"
  },
  "packageManager": "yarn@4.9.2"
}
