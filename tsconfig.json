{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "importHelpers": false,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "!src/backends/postgres/migrations/**/*.ts",
    "src/backends/postgres/migrations/1_create_queue_table.js"
  ],
  "exclude": ["node_modules", "dist"]
}
